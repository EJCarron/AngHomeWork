@{
    Layout = null;
}

@using AngularHomeWork.Models
@model AngularHomeWork.Models.Student


<!DOCTYPE html>
<html>
<head>
    <meta chrset="UTF 8">
    <link rel="stylesheet" href="/css/angular-material.css" />
    <title>Student</title>
</head>
<body 
    ng-app="app"
    ng-controller="studentPageController"
    ng-init="subscriptions = @Html.Raw(Json.Encode(Model.subscriptions).Replace("\"", "'")) ; studentName = '@Model.name'; "
    layout="column"
    id="studentPage"
    >

    <md-toolbar class="md-primary" layout="row">
        <p layout-margin>{{studentName}}</p>
        <md-button ng-click="logoutBtnClicked()">Logout</md-button>
    </md-toolbar>

    <div class="container" layout="row" flex>

        <md-sidenav class="lightblue"
                    md-component-id="left"
                    md-is-locked-open="true"
                    md-whiteframe="5"
                    style=" min-width: 10em !important;
                            width: 50vw !important;
                            max-width: 10em !important;">
            <md-list>
                <md-list-item>
                    <md-button href ="#!/StudentHome" class="md-accent md-raised md-hue-1">Home</md-button>
                </md-list-item>
                <md-list-item  ng-repeat="subscription in subscriptions">
                    <md-button ng-click="subscriptionBtnClicked(subscription)" href="#!/StudentClassRoom/{{subscription}}">{{subscription}}</md-button>
                </md-list-item>
                <md-list-item>
                    <md-button href="#!/SubscribeToClassRoom" class="md-fab" >+</md-button>
                </md-list-item>
            </md-list>
        </md-sidenav>

        <md-content class="md-padding" flex>
            <div ng-view></div>
        </md-content>



    </div>


    <script src="/Scripts/angular.min.js"></script>
    <script src="/Scripts/angular-route.min.js"></script>
    <script src="/Scripts/angular-animate.min.js"></script>
    <script src="/Scripts/angular-aria.min.js"></script>
    <script src="/Scripts/angular-material.min.js"></script>



    <script src="/Client/Modules/StudentAppModule.js"></script>

    <script src="/Client/Controllers/StudentPageController.js"></script>
    <script src="/Client/Controllers/StudentHomeController.js"></script>
    <script src="/Client/Controllers/SubscribeToClassRoomController.js"></script>
    <script src="/Client/Controllers/StudentClassRoomController.js"></script>
    <script src="/Client/Controllers/StudentAssignmentController.js"></script>

    <script src="/Client/Services/MagicStrings.js"></script>
    <script src="/Client/Services/StudentModelCommandService.js"></script>
    <script src="/Client/Services/NullObjects.js"></script>
</body>
</html>

