@{
    Layout = null;
}

@using AngularHomeWork.Models
@model AngularHomeWork.Models.Teacher

<!DOCTYPE html>
<html>
<head>

    <meta chrset="UTF 8">
    <link rel="stylesheet" href="css/angular-material.css" />
    <title>Teacher</title>
</head>




<body ng-app="app" ng-init="classRooms = @Html.Raw(Json.Encode(Model.classRoomNames).Replace("\"","'")) ; teacherName = '@Model.name'" layout="column">
    
    <md-toolbar class="md-primary">
        <p>{{teacherName}}</p>
    </md-toolbar>

    <div class="container" layout="row" flex>
        <md-sidenav class="lightblue"
                    md-component-id="left"
                    md-is-locked-open="true"
                    md-whiteframe="5"
                    style=" min-width: 10em !important;
                            width: 50vw !important;
                            max-width: 10em !important;">
            <md-list>
                <md-list-item>
                    <md-button class="md-accent md-raised md-hue-4">Home</md-button>
                </md-list-item>
                <md-list-item ng-repeat="classRoom in classRooms">
                    <md-button>{{classRoom}}</md-button>
                </md-list-item>
            </md-list>

        </md-sidenav>

        <md-content id="content" class="lightgreen" flex> Hellow World</md-content> 

    </div>



        
    <style>
        lightblue{background-color:lightblue;}
        lightgreen{background-color:lightgreen}
    </style>



    <script src="Scripts/angular.min.js"></script>
    <script src="Scripts/angular-animate.min.js"></script>
    <script src="Scripts/angular-aria.min.js"></script>
    <script src="Scripts/angular-material.min.js"></script>

    <script src="Client/Modules/AppModule.js"></script>
    <script src="Client/Controllers/SideNavController.js"></script>
</body>
</html>

